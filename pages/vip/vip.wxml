<!--vip.wxml-->
<view class="login" wx:if="{{login}}">
  <view class="loginTitle">已注册用户，可在下面登录<text bindtap="changeTap">{{change}}</text></view>
  <view class="mailBox" wx:if="{{mail}}">
    <input placeholder="点击输入您的邮箱" type="text" bindinput="bindMailInput" />
  </view>
  <view class="phoneBox" wx:if="{{phone}}">
    <picker bindchange="bindPickerChange" value="0" range="{{telArr}}" mode="selector">
      <view class="picker">
        {{telArr[index]}}
      </view>
    </picker>
    <input type="number" bindinput="bindPhoneInput" placeholder="点击输入您电话号码" class="phoneInp" />
  </view>
  <input maxlength="15" type="password" placeholder="点击输入密码" class="pass" bindinput="bindPassInput" value="{{passVal}}" />
  <view class="msg">{{msg}}</view>
  <view class="confirm" bindtap="confirm">立即登录</view>
</view>
<view class="user" wx:if="{{user}}">
  <image src="../../img/banner.png" class="banner"></image>
  <view class="titleBar">
    <image src="{{src}}" bindtap="signOut"></image>
    <view class="titleBox"><text class="name">{{name}}</text><text class="lv">{{lv}}</text></view>
    <view class="titleLine">会员卡号:  {{vipNum}}</view>
    <view class="titleLine">会籍到期日:  {{vipDate}}</view>
    <image src="../../img/qr.png" bindtap="qrTap"></image>
  </view>
  <view class="money">悦享钱: {{money}}</view>
  <view class="round">
    <view class="r1" animation="{{animationData}}" style="z-index:{{r1}};"></view>
    <view class="r2" style="z-index:{{r2}};"></view>
    <view class="r3" style="z-index:{{r3}};"></view>
    <view class="r4" style="z-index:{{r4}};"></view>
    <view class="b"></view>
    <view class="s"></view>  
  </view>
  <image class="icon" src="../../img/icon.png"></image>
  <text class="c_t_1">{{c_t_1}}</text>
  <text class="c_t_2">{{c_t_2}}</text>
  <text class="c_t_3">{{c_t_3}}</text>
</view>
<view class="qrContainer" wx:if="{{qrContainer}}" bindtap="closeTap">
  <view class="canvasBox">
    <canvas canvas-id="mycanvas"/>
    <text>此二维码还有{{minutes}}分{{seconds}}秒刷新</text>
    <image src="../../img/close.png" ></image>
  </view>
  <view class="text">请向店员出示二维码，立即使用周生生之友会员卡</view>
</view>