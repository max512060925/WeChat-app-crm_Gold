/**index.wxss**/
page{
  padding-bottom: 10vh;
}
#container{
  height: 100vh;
  -webkit-overflow-scrolling : touch; 
}
.listBar {
  height: calc(100vh*(24/276.5));
  background: #ede1cb;
  padding-left: calc(100vw*(12/187.5));
  line-height: calc(100vh*(24/276.5));
  color: #000;
  font-size: calc(100vh*(8/276.5));
  font-weight: bolder;
}

.listBar image {
  float: right;
  width: calc(100vw*(10/187.5));
  height: calc(100vw*(10/187.5));
  margin-top: calc(100vh*(6/276.5));
}

.listBar text {
  float: right;
  font-size: calc(100vh*(7/276.5));
  line-height: calc(100vh*(24/276.5));
  margin-right: calc(100vw*(12.5/187.5));
  color: #485d6b;
}

.cityLine1 {
  margin-top: calc(100vh*(4/276.5));
  color: #000;
  font-weight: 700;
  font-size: calc(100vh*(7/276.5));
  float: left;
  width: calc(100vw*(159/187.5));
  box-sizing: border-box;
}

.cityLine2 {
  margin-top: calc(100vh*(2/276.5));
  color: #c5aa7c;
  font-size: calc(100vh*(6/276.5));
  float: left;
  width: calc(100vw*(159/187.5));
  box-sizing: border-box;
}
.cityLine1 text:first-child{
  width:50%;
display:inline-block;
overflow:hidden;
white-space:nowrap;
text-overflow:ellipsis;

}
.cityLine1 .locM {
  float: right;
  margin-right: calc(100vw*(10/187.5));
  color: #9b9b9b;
  font-size: calc(100vh*(6/276.5));
  font-weight: normal;
}

.cityLine2  {
  float: left;
  color: #9b9b9b;
}

.cityLine2 text:nth-child(2) {
  text-decoration: underline;
  float: left;
  
}

